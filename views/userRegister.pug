  link(href='css/main.css' rel='stylesheet' media='all')
.page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
  .wrapper.wrapper--w680
    .card.card-4
      .card-body
        h2.title Thông tin người dùng
        form(method='POST' action='/updateUser')
          .row.row-space
            .col-2
              .input-group
                label.label Họ và tên
                input.input--style-4(type='text' name='Name' required value=`${userData.Name}`)

              
            .col-2
              .input-group
                label.label Địa chỉ
                input.input--style-4(type='text' name='Address' value=`${userData.Address}`)
          .row.row-space
            .col-2
              .input-group
                label.label Ngày sinh
                .input-group-icon
                  input.input--style-4.js-datepicker(type='text' name='Birthday' value=`${Birthday}`)
                  i.zmdi.zmdi-calendar-note.input-icon.js-btn-calendar
          .row.row-space
            .col-2
              .input-group
                label.label Email
                input.input--style-4(type='email' name='Email' required value=`${userData.Email}`)

          .p-t-15
            button.btn.btn--radius-2.btn--blue(type='submit') Xác nhận
// Jquery JS
script(src='vendor/jquery/jquery.min.js')
// Vendor JS
script(src='vendor/select2/select2.min.js')
script(src='vendor/datepicker/moment.min.js')
